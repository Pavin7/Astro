<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:background="@drawable/whiteleaf"
    android:layout_height="match_parent"
    tools:context=".BotActivity">



    <TextView
        android:text=" Dear customer,this is our cryptocurrency trading bot"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text=" We are selling  this trading bot that is incoporated into the  brokers system">

    </TextView>

    <TextView
        android:text="The bot perfoms trades on your behalf,according to the configurations that you set"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:text="The settings are sent to your email after you purchase the bot and Send the code Astro@gmail.com for verification"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:text="If you are interested in purchasing the bot, follow thepayment instructions instructions below,The payment method is MPESA"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="18dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:text="Paybill 12345678"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:text="Account number:YOUR NAME"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:text="After noting down the above details,you can proceed to pay using the button below"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:text="PAY HERE"
        android:id="@+id/paybutton"
        android:layout_gravity="center"
        android:backgroundTint="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>



    <TextView
        android:text="You can download the bot using the button below"
        android:layout_width="match_parent"
        android:layout_marginStart="3dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:id="@+id/botbutton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:backgroundTint="#3F51B5"
        android:layout_height="wrap_content"
        android:text="GET  BOT" />








</LinearLayout>